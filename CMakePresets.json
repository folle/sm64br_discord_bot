{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 2,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/${presetName}",
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      },
      "cacheVariables": {
        "CMAKE_LINKER": "lld",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "linux-base",
      "inherits": "default",
      "hidden": true,
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux x64 Debug",
      "description": "Targets Linux (x64 Debug) with ninja and clang++",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux x64 Release",
      "description": "Targets Linux (x64 Release) with ninja and clang++",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "rpi5-base",
      "inherits": "default",
      "hidden": true,
      "toolchainFile": "${sourceDir}/toolchains/rpi5.cmake",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "rpi5-debug",
      "displayName": "Raspberry Pi 5 Debug (Cross-Compile)",
      "description": "Targets Raspberry Pi 5 (Debug) with ninja and clang++ (Linux cross-compile)",
      "inherits": "rpi5-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "rpi5-release",
      "displayName": "Raspberry Pi 5 Release (Cross-Compile)",
      "description": "Targets Raspberry Pi 5 (Release) with ninja and clang++ (Linux cross-compile)",
      "inherits": "rpi5-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "mac-base",
      "inherits": "default",
      "hidden": true,
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "architecture": {
        "value": "ARM64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "mac-debug",
      "displayName": "macOS AArch64 Debug",
      "description": "Targets macOS (AArch64 Debug) with ninja and clang++",
      "inherits": "mac-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "mac-release",
      "displayName": "macOS AArch64 Release",
      "description": "Targets macOS (AArch64 Release) with ninja and clang++",
      "inherits": "mac-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux x64 Debug",
      "description": "Debug build for Linux x64",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "displayName": "Linux x64 Release",
      "description": "Release build for Linux x64",
      "configurePreset": "linux-release"
    },
    {
      "name": "rpi5-debug",
      "displayName": "Raspberry Pi 5 Debug",
      "description": "Debug build for Raspberry Pi 5 (Linux cross-compile)",
      "configurePreset": "rpi5-debug"
    },
    {
      "name": "rpi5-release",
      "displayName": "Raspberry Pi 5 Release",
      "description": "Release build for Raspberry Pi 5 (Linux cross-compile)",
      "configurePreset": "rpi5-release"
    },
    {
      "name": "mac-debug",
      "displayName": "macOS AArch64 Debug",
      "description": "Debug build for macOS AArch64",
      "configurePreset": "mac-debug"
    },
    {
      "name": "mac-release",
      "displayName": "macOS AArch64 Release",
      "description": "Release build for macOS AArch64",
      "configurePreset": "mac-release"
    }
  ]
}